{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Linux g++",
			"command": "/usr/bin/g++",
			"args": [
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-O3",
				"-std=c++17",
				"-pedantic"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "компилятор: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "Linux g++ (source dir)",
			"command": "/usr/bin/g++",
			"args": [
				"${fileDirname}/*.cpp",
				"${fileDirname}/source/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-O3",
				"-std=c++17",
				"-pedantic"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "компилятор: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "Windows clang++",
			"command": "C:/LLVM/bin/clang++",
			"args": [
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
				"-O3",
				"-std=c++17"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "компилятор: C:/LLVM/bin/clang++"
		},
		{
			"type": "cppbuild",
			"label": "Windows clang++ (source dir)",
			"command": "C:/LLVM/bin/clang++",
			"args": [
				"${fileDirname}/*.cpp",
				"${fileDirname}/source/*.cpp",
				"-o",
				"${fileDirname}/{fileBasenameNoExtension}.exe",
				"-O3",
				"-std=c++17"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "компилятор: C:/LLVM/bin/clang++"
		}
	]
}